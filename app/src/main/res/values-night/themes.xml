<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Freedom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kPrimaryColor</item>
        <item name="colorAccent">@color/kContentColorDarkTheme</item>
        <item name="colorPrimaryDark">@color/kPrimaryColor</item>
        <item name="android:windowBackground">@color/kContentColorLightTheme</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>


    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">@dimen/alert_dialog_width</item>
        <item name="android:windowMinWidthMinor">@dimen/alert_dialog_width</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>