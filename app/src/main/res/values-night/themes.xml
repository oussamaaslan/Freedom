<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Freedom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kPrimaryColor</item>
        <item name="colorAccent">@color/kContentColorDarkTheme</item>
        <item name="colorPrimaryDark">@color/kPrimaryColor</item>
        <item name="android:windowBackground">@color/kContentColorLightTheme</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:navigationBarColor">@color/kContentColorLightTheme</item>
    </style>

    <style name="Theme.Freedom.HomeActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge" >
        <item name="colorPrimary">@color/kPrimaryColor</item>
        <item name="colorAccent">@color/kContentColorDarkTheme</item>
        <item name="colorPrimaryDark">@color/kPrimaryColor</item>
        <item name="android:windowBackground">@color/kContentColorLightTheme</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:navigationBarColor">@color/kContentColorLightTheme</item>

    </style>
    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">@dimen/alert_dialog_width</item>
        <item name="android:windowMinWidthMinor">@dimen/alert_dialog_width</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="customIcon"  >
        !-- Customize your light theme here. -->
        <item name="tint">@android:color/white</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>

    </style>
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/kContentColordarker</item> <!-- Set background color to transparent -->
    </style>

    <style name="PopupWindow" parent="Base.Theme.Freedom">
    </style>
</resources>